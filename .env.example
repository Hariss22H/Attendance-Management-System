# Environment Configuration for AWS EC2 Deployment
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_NAME=attendance_db
DB_USER=attendance_user
DB_PASSWORD=your_secure_database_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# S3 Configuration (for storing images)
S3_BUCKET_NAME=attendance-system-bucket
S3_REGION=us-east-1

# Application Configuration
APP_ENV=production
DEBUG=False
SECRET_KEY=your_secret_key_here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Face Recognition Configuration
FACE_DETECTION_CONFIDENCE=0.5
RECOGNITION_DISTANCE_THRESHOLD=0.6

# Application Paths
BASE_DIR=/app
TRAINING_IMAGE_PATH=/app/TrainingImage
TRAINING_LABEL_PATH=/app/TrainingImageLabel/Trainner.yml
STUDENT_DETAILS_PATH=/app/StudentDetails/studentdetails.csv
ATTENDANCE_PATH=/app/Attendance

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/attendance-app/app.log
